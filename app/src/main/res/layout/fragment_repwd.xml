<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_net_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_app"
              android:orientation="vertical">

    <!-- 检查更新 -->
    <RelativeLayout
        android:id="@+id/dd_system_rl_upload"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_select_white_gray"
        android:clickable="true"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/system_tv03"
            style="@style/system_title"
            android:background="@drawable/icon_set_update"/>

        <!--检查更新-->
        <TextView
            android:id="@+id/dd_system_tv_upload"
            style="@style/system_title_text"
            android:layout_toRightOf="@id/system_tv03"
            android:text="检查更新"/>


    </RelativeLayout>

    <!-- 关于系统 -->
    <RelativeLayout
        android:id="@+id/dd_system_rl_about"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_select_white_gray"
        android:clickable="true"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/system_tv04"
            style="@style/system_title"
            android:background="@drawable/icon_set_sys"/>

        <!--关于系统-->
        <TextView
            android:id="@+id/dd_system_tv_about"
            style="@style/system_title_text"
            android:layout_toRightOf="@id/system_tv04"
            android:text="关于系统"/>


    </RelativeLayout>


</LinearLayout>